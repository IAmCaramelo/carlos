doctype html
html(lang="en")
head
    title Stand Xpto
    meta(charset="utf-8")
    link(rel="stylesheet",href="/css/reset.css",type="text/css",media="screen")
    link(rel="stylesheet",href="/css/style.css",type="text/css",media="screen")
    link(rel="stylesheet",href="/css/grid.css",type="text/css",media="screen")
    <!--[if lt IE 9]>
        link(rel="stylesheet",href="/css/ie.css",type="text/css",media="screen")
    <![endif]-->
body(id="page1")
    div(class="main-bg")
        div(class="bg")
            header
                div(class="main")
                    div(class="wrapper")
                        h1
                            a(href="/") Stand Xpto
                    div(class="fright")
                        div(class="indent")
                            span(class="address") Avenida Dr. Francisco Sรก Carneiro, n.ยบ 50, 6300-559 Guarda
                                span(class="phone") Tel: +351 271 220 164
                    nav
                        ul(class="menu")
                            li
                                a(class="active" href="/") Home
                            li
                                a(href="/about") Sobre Nos
                            li
                                a(href="/veiculos/carro") Carros
                            li
                                a(href="/veiculos/mota") Motas
                            li
                                a(href="/stands") Stands
                            if(user)
                                li
                                    a(href="/logout") Logout
                            else
                                li
                                    a(href="/login") Login
            section(id="content")
                div(class="main")
                        div(class="container-bot")
                            div(class="container-top")
                                div(class="container")
                                    div(class="wrapper")
                                        article(class="grid_8")
                                            div(class="indent-left")
                                                h2 Bem-Vindos ao Stand Xpto!
                                                div(class="prev-indent-bot")
                                                    each veiculo in veiculos
                                                        div
                                                            div(style="float:left;margin-right:20px;")
                                                                img(src="/images/"+veiculo.Tipo+"/"+veiculo.Marca+"-"+veiculo.Modelo+".jpg",style="width:200px;height:100px")
                                                            div(style="float:left;text-align:justify")
                                                                p Marca: #{veiculo.Marca}
                                                                    br
                                                                    span Modelo: #{veiculo.Modelo}
                                                                    br
                                                                    span Tipo: #{veiculo.Tipo}
                                                                    br
                                                                    span Preco: #{veiculo.Preco}